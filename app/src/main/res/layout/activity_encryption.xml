<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.pacerapps.testencryption.EncryptionActivity">


    <Button
        android:id="@+id/button_encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="@string/encrypt"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_margin="@dimen/button_padding"/>

    <Button
        android:id="@+id/button_decrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_encrypt"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="@string/decrypt"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_margin="@dimen/button_padding"/>


    <Button
        android:id="@+id/button_add_to_db"
        android:text="@string/encrypt_to_db"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_decrypt"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/button_padding"/>

    <Button
        android:id="@+id/button_decrypt_from_db"
        android:text="@string/decrypt_from_db"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_add_to_db"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/button_padding"/>

    <Button
        android:id="@+id/button_play_source"
        android:text="@string/play_original"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_decrypt_from_db"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/button_padding"/>

    <Button
        android:id="@+id/button_play_decrypt"
        android:text="@string/play_decrypted"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_play_source"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/button_padding"/>

    <Button
        android:id="@+id/button_play_encrypted"
        android:text="@string/play_encrypted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_play_decrypt"
        android:layout_margin="@dimen/button_padding"/>

    <Button
        android:id="@+id/button_play_decrypted_from_db"
        android:text="@string/play_decrypted_from_db"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_play_encrypted"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/button_padding"/>

    <TextView
        android:id="@+id/textview_status"
        android:text="TEXT VIEW"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:typeface="monospace"
        android:layout_margin="@dimen/button_padding"
        android:layout_alignParentBottom="true"/>
    <!--<Button
        android:id="@+id/button_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="@string/stop"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:layout_margin="@dimen/button_padding"
        android:layout_below="@id/button_play_decrypted_from_db"/>-->


</RelativeLayout>
